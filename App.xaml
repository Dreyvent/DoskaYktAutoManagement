<Application x:Class="DoskaYkt_AutoManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DoskaYkt_AutoManagement"
             xmlns:viewModel="clr-namespace:DoskaYkt_AutoManagement.MVVM.ViewModel"
             xmlns:view="clr-namespace:DoskaYkt_AutoManagement.MVVM.View"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/WindowBtnsTheme.xaml"/>
                <ResourceDictionary Source="Theme/TerminalTextBoxTheme.xaml"/>
                <ResourceDictionary Source="Theme/ViewTheme.xaml"/>
                <ResourceDictionary Source="Theme/ScrollBarTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewModel:MyAccountsViewModel}">
                <view:MyAccountsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:MyADsViewModel}">
                <view:MyADsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
