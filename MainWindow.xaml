<Window x:Class="DoskaYkt_AutoManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoskaYkt_AutoManagement"
        xmlns:viewModel="clr-namespace:DoskaYkt_AutoManagement.MVVM.ViewModel"
        xmlns:view="clr-namespace:DoskaYkt_AutoManagement.MVVM.View"
        xmlns:core="clr-namespace:DoskaYkt_AutoManagement.Core"
        mc:Ignorable="d"
        Height="720" Width="1080"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="DoskaYkt Auto Management">
    <Window.Resources>
        <DropShadowEffect x:Key="MainShadow" BlurRadius="18" ShadowDepth="0" Color="#AA000000"/>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="#23232b"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect" Value="{StaticResource MainShadow}"/>
        </Style>
    </Window.Resources>
    <Border Background="#161616"
            CornerRadius="20"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0"
                        Grid.RowSpan="3"
                        Background="#a8aaac"
                        Width="2"
                        Margin="0,0,-2,0"
                        HorizontalAlignment="Right"/>
            <Image Source="/Images/DoskaYkt AutoCreator-Logo.png"
                   Width="40"
                   Height="40"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="15,0,0,0"/>
            <TextBlock Text="DoskaYkt"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="Fonts/#Nunito"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="60,0,0,20"/>
            <TextBlock Text="Auto Management"
                       FontSize="14"
                       FontWeight="Bold"
                       FontFamily="Fonts/#Nunito"
                       Foreground="#F44A22"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="60,20,0,0"/>
            <StackPanel Grid.Row="1">
                <Separator Margin="0,0,0,10"
                           Background="Transparent"/>
                <RadioButton Content="Главное"
                             Height="50"
                             Foreground="White"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>

                <RadioButton Content="Мои объявления"
                             Height="50"
                             Foreground="White"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding MyADsViewCommand}"/>

                <RadioButton Content="Мои аккаунты"
                             Height="50"
                             Foreground="White"
                             FontSize="16"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding MyAccountsViewCommand}"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label Content="Made by Dreyvent"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="12"
                       Margin="15,25,0,0"/>
                <Label Content="a.k.a Andrey Dedyukin"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="12"
                       Margin="15,-5,0,0"/>
                <Label Content="{Binding AppVersion}"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="12"
                       Margin="15,-5,0,0"/>
            </StackPanel>

            <Button Width="50"
                    Height="50"
                    x:Name="MinimizeBtn"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,65,0"
                    Click="MinimizeBtn_Click"
                    Grid.Column="1" 
                    Style="{StaticResource WindowBtnsTheme}">
                <TextBlock Text="&#xf2d1;"
                           FontFamily="Fonts/#Font Awesome 7 Free"/>
            </Button>
            <Button Width="50"
                    Height="50"
                    Grid.Column="1" 
                    x:Name="ExitBtn"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Click="ExitBtn_Click"
                    Style="{StaticResource WindowBtnsTheme}">
                <TextBlock Text="&#x58;"
                           FontFamily="Fonts/#Font Awesome 7 Free"/>
            </Button>
            <TextBlock Text="&#xf2bd;"
                       Grid.Column="1" 
                       FontSize="26"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontFamily="Fonts/#Font Awesome 7 Free"
                       Margin="20,0,0,0"/>
            <Label Content="Текущий аккаунт:"
                   Grid.Column="1" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="18"
                   Margin="50,0,5,0"
                   FontFamily="/Fonts/#Play"/>
            <Label Content="{Binding AccountManager.SelectedAccountDisplay}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="18"
                   Margin="200,0,0,0"
                   Grid.Column="1" FontFamily="Fonts/#Play"/>
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ContentControl">
                                    <Border Style="{StaticResource CardBorder}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
            <TextBox Grid.Column="1"
                     Grid.Row="2"
                     x:Name="TerminalLogs"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Style="{StaticResource TerminalTextBoxStyle}"/>
        </Grid>
    </Border>
</Window>
