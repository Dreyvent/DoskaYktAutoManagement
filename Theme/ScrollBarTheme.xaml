<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ScrollBar" x:Key="CustomScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="0,8,-5,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid x:Name="Root" Background="Transparent">

                        <Track x:Name="PART_Track"
                           IsDirectionReversed="true"
                           Focusable="false">

                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{x:Null}" Visibility="Collapsed"/>
                            </Track.DecreaseRepeatButton>

                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{x:Null}" Visibility="Collapsed"/>
                            </Track.IncreaseRepeatButton>

                            <!-- Thumb — задаём фон/обводку здесь, а внутри шаблона Border привязывается к этим свойствам -->
                            <Track.Thumb>
                                <Thumb x:Name="Thumb"
                                   Focusable="false"
                                   Background="#444"
                                   BorderBrush="#666"
                                   BorderThickness="1">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <!-- Border с CornerRadius; цвета берутся через TemplateBinding -->
                                            <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="4"
                                                SnapsToDevicePixels="True"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover: меняем свойство Thumb.Background (внутренний Border обновится через TemplateBinding) -->
                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Background" Value="#666"/>
                        </Trigger>

                        <!-- Drag -->
                        <Trigger SourceName="Thumb" Property="IsDragging" Value="True">
                            <Setter TargetName="Thumb" Property="Background" Value="#888"/>
                        </Trigger>

                        <!-- Вертикальный -->
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="Root" Property="Width" Value="8"/>
                            <Setter TargetName="Thumb" Property="Width" Value="6"/>
                            <Setter TargetName="Thumb" Property="MinHeight" Value="30"/>
                        </Trigger>

                        <!-- Горизонтальный -->
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter TargetName="Root" Property="Height" Value="8"/>
                            <Setter TargetName="Thumb" Property="Height" Value="6"/>
                            <Setter TargetName="Thumb" Property="MinWidth" Value="30"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>