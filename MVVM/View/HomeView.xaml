<UserControl x:Class="DoskaYkt_AutoManagement.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoskaYkt_AutoManagement.MVVM.View"
             xmlns:viewModel="clr-namespace:DoskaYkt_AutoManagement.MVVM.ViewModel"
             xmlns:converters="clr-namespace:DoskaYkt_AutoManagement.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1000" 
             d:DesignWidth="800"
             UseLayoutRounding="True">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}"/>
            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
        </ScrollViewer.Resources>
        <StackPanel Margin="20,0,20,20" Orientation="Vertical">
            <Border Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="Главное" 
                               Foreground="White" 
                               FontSize="28" 
                               Margin="0,0,0,10"/>
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <Button Content="Сканирование объявлений" 
                                Command="{Binding CheckAdsCommand}" 
                                IsEnabled="{Binding IsScanning, Converter={StaticResource BooleanNegationConverter}}"
                                Width="220" 
                                Height="40" 
                                Margin="5" 
                                ToolTip="Проверить ваши объявления на сайте"/>
                        <Button Content="Закончить сеанс" 
                                Command="{Binding EndSessionCommand}" 
                                Width="220" 
                                Height="36" 
                                Margin="5" 
                                ToolTip="Закрыть текущий сеанс браузера (WebDriver)"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="14" 
                                   Margin="5" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Grid.Column="0" 
                                   Text="Запуск браузера:" 
                                   VerticalAlignment="Center" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   Margin="0,0,5,0"/>
                        <ToggleButton Grid.Column="1" 
                                      Grid.Row="0" 
                                      HorizontalAlignment="Left" 
                                      x:Name="BrowserToggle" 
                                      Content="С окном" 
                                      Width="100" 
                                      Height="30" 
                                      IsChecked="{Binding IsBrowserVisible, Mode=TwoWay}" 
                                      Background="Gray" 
                                      Foreground="White" 
                                      ToolTip="Показывать окно браузера при работе"/>
                        <TextBlock Grid.Row="2" 
                                   Grid.Column="0" 
                                   Text="Всего объявлений в БД:" 
                                   VerticalAlignment="Center" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="2" 
                                   Grid.Column="1" 
                                   Text="{Binding AdsCount}" 
                                   VerticalAlignment="Center" 
                                   Foreground="White" 
                                   FontSize="16"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Separator Margin="0,10,0,10"/>
            <Border Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="Сканирование объявлений" 
                               Foreground="White" 
                               FontSize="28" 
                               Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель управления -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                            <TextBlock Text="Фильтр:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox SelectedIndex="0" Width="140" SelectedValue="{Binding FoundFilterMode}" SelectedValuePath="Content">
                                <ComboBoxItem Content="Все"/>
                                <ComboBoxItem Content="Опубликованные"/>
                                <ComboBoxItem Content="Снятые"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1" HorizontalAlignment="Left">
                            <TextBlock Text="Сортировка:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox Width="140" SelectedValue="{Binding FoundSortBy}" SelectedValuePath="Content" Margin="0,0,5,0">
                                <ComboBoxItem Content="Title"/>
                                <ComboBoxItem Content="Id"/>
                            </ComboBox>
                            <ToggleButton Content="По возр." IsChecked="{Binding FoundSortAscending}" Width="90"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1" HorizontalAlignment="Right">
                            <Button Content="Выбрать все" Command="{Binding SelectAllFoundCommand}" Margin="0,0,5,0"/>
                            <Button Content="Снять все" Command="{Binding ClearFoundSelectionCommand}"/>
                        </StackPanel>

                        <!-- Список с авто-скроллом -->
                        <ListBox Grid.Row="2"
                                 ItemsSource="{Binding FoundAdsView}"
                                 SelectionMode="Extended"
                                 MaxHeight="300"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Title}" Foreground="Black" Margin="5,0,10,0" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Id}" Foreground="Gray" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <Button Content="Добавить объявления в БД" 
                                Command="{Binding SaveSelectedCommand}" 
                                Width="220" 
                                Height="40" 
                                Margin="5" 
                                ToolTip="Проверить ваши объявления на сайте"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="14" 
                                   Margin="5" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Separator Margin="0,10,0,10"/>
            <Border Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="Настройки планировщика"
                               Foreground="White"
                               FontSize="28"
                               Margin="0,0,0,10"/>
                    <Grid Margin="5,10,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Пауза между снятием и публикацией (сек):" Foreground="White" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RepostDelayMinSec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="-" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding RepostDelayMaxSec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Grid Margin="5,10,5,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Параллельных задач (1-3):" Foreground="White" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TaskQueueMaxConcurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="(Ускоряет работу с сайтом несколькими вкладками)" Margin="10,0,0,0" Grid.Row="0" Grid.Column="2" Foreground="Gray" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
