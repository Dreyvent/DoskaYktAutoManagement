<UserControl x:Class="DoskaYkt_AutoManagement.MVVM.View.MyADsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoskaYkt_AutoManagement.MVVM.View"
             xmlns:core="clr-namespace:DoskaYkt_AutoManagement.Core"
             xmlns:conv="clr-namespace:DoskaYkt_AutoManagement.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             UseLayoutRounding="True">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}"/>
        </ScrollViewer.Resources>
        <StackPanel Margin="20,0,20,20" Orientation="Vertical">
            <Border Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="Мои объявления" FontFamily="/Fonts/#Play" Foreground="White" FontSize="28" Margin="0,0,0,20"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border Style="{StaticResource CardPanel}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                                    <Button Content="Выбрать все" Command="{Binding SelectAllCommand}" Margin="0,0,5,0"/>
                                    <Button Content="Снять все" Command="{Binding ClearSelectionCommand}"/>
                                </StackPanel>
                                <ListBox ItemsSource="{Binding MyAds}" SelectedItem="{Binding SelectedAd}" Grid.Row="0" SelectionMode="Extended">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,0,0">
                                                    <TextBlock Text="{Binding Title}" ToolTip="{Binding Description}"/>
                                                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsAutoRaiseEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Снять: " Foreground="Gray" FontSize="12"/>
                                                        <TextBlock Text="{Binding NextUnpublishAt, StringFormat=HH:mm}" Foreground="Gray" FontSize="12" Margin="4,0,10,0"/>
                                                        <TextBlock Text="Опубликовать: " Foreground="Gray" FontSize="12"/>
                                                        <TextBlock Text="{Binding NextRepublishAt, StringFormat=HH:mm}" Foreground="Gray" FontSize="12"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding SiteId}" Foreground="Gray" Margin="5,0,0,0"/>
                                                <TextBlock Grid.Column="3" Text="{Binding AutoRaiseMinutes}" Foreground="Gray" Margin="10,0,0,0" Visibility="{Binding IsAutoRaiseEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                            <Button Content="Удалить выбранные"
                                    Width="auto" 
                                    Padding="5"
                                    Command="{Binding DeleteAdCommand}" 
                                    Margin="5" 
                                    ToolTip="Удалить локальные данные объявлений"/>
                            <Button Content="Автоподнять" 
                                    Width="auto"
                                    Padding="5"
                                    Command="{Binding BumpAdCommand}" 
                                    Margin="5" 
                                    ToolTip="Снять и опубликовать выбранные объявление"/>
                            <Button Content="Снять объявления"
                                    Command="{Binding DeleteOnSiteCommand}"
                                    Width="auto"
                                    Padding="5"
                                    Height="36"
                                    Margin="5"
                                    ToolTip="Снять выбранные объявления с сайта"/>
                            <Button Content="Опубликовать объявления"
                                    Command="{Binding ActivateAdOnSiteCommand}"
                                    Width="auto"
                                    Padding="5"
                                    Height="36"
                                    Margin="5"
                                    ToolTip="Опубликовать выбранные объявления с сайта"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Цикл снятия с публикации:"
                                           Grid.Column="0"
                                           Grid.Row="0"
                                           FontSize="18"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <Button Content="Применить таймер"
                                        Grid.Column="2"
                                        Grid.Row="0"
                                        Width="auto" 
                                        Padding="5"
                                        Command="{Binding ApplyUnpublishTimerCommand}" 
                                        Margin="5" />
                                <Button Content="Убрать таймер"
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        Width="auto" 
                                        Padding="5"
                                        Command="{Binding RemoveUnpublishTimerCommand}" 
                                        Margin="5" />
                                <TextBox Text="{Binding UnpublishMinutesInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Grid.Column="3"
                                         Grid.Row="0"
                                         FontSize="18"
                                         VerticalContentAlignment="Center"
                                         Width="100"
                                         Height="30"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Таймер в минутах"
                                           Grid.Column="4"
                                           Grid.Row="0"
                                           Foreground="White"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Цикл публикации:"
                                           Grid.Column="0"
                                           Grid.Row="1"
                                           FontSize="18"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <Button Content="Применить таймер"
                                        Grid.Column="2"
                                        Grid.Row="1"
                                        Width="auto" 
                                        Padding="5"
                                        Command="{Binding ApplyPublishTimerCommand}" 
                                        Margin="5" />
                                <Button Content="Убрать таймер"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Width="auto" 
                                        Padding="5"
                                        Command="{Binding RemovePublishTimerCommand}" 
                                        Margin="5" />
                                <TextBox Text="{Binding PublishMinutesInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Grid.Column="3"
                                         Grid.Row="1"
                                         FontSize="18"
                                         VerticalContentAlignment="Center"
                                         Width="100"
                                         Height="30"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Таймер в минутах"
                                           Grid.Column="4"
                                           Grid.Row="1"
                                           Foreground="White"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </Grid>

                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            <Separator Margin="0,10,0,10"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
